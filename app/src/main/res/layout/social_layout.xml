<LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentBottom="true"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_horizontal">

    <ImageView
        android:id="@+id/google_plus"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/googleplus"
        android:layout_margin="20dp" />

    <ImageView
        android:id="@+id/github"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/github"
        android:layout_marginStart="20dp"
        android:layout_margin="20dp" />

    <ImageView
        android:id="@+id/twitter"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/twitter"
        android:layout_marginStart="20dp"
        android:layout_margin="20dp" />
    <ImageView
        android:id="@+id/headl"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/headl"
        android:layout_marginStart="20dp"
        android:layout_margin="20dp" />
    <ImageView
        android:id="@+id/song"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/song"
        android:layout_marginStart="20dp"
        android:layout_margin="20dp" />
    <ImageView
        android:id="@+id/spotify"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/spotify"
        android:layout_marginStart="20dp"
        android:layout_margin="20dp" />
    <ImageView
        android:id="@+id/telegram"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/telegram"
        android:layout_marginStart="20dp"
        android:layout_margin="20dp" />
    <ImageView
        android:id="@+id/youtube"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/youtube"
        android:layout_marginStart="20dp"
        android:layout_margin="20dp" />
    <ImageView
        android:id="@+id/wallpapers"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/wallpapers"
        android:layout_marginStart="20dp"
        android:layout_margin="20dp" />
    <ImageView
        android:id="@+id/gplay"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/gplay"
        android:layout_marginStart="20dp"
        android:layout_margin="20dp" />
    <ImageView
        android:id="@+id/sourcecode"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/source"
        android:layout_marginStart="20dp"
        android:layout_margin="20dp" />
    <ImageView
        android:id="@+id/ig"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ig"
        android:layout_marginStart="20dp"
        android:layout_margin="20dp" />

</LinearLayout>